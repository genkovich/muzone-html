        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Muzone - сучасна музична школа для кожного{% endblock %}</title>
        <meta name="description" content="{% block description %}Muzone ✅ Сучасна музична школа в Одесі для дорослих і дітей ⭐️ Навчись швидко грати на музияних інструментах з нами ✅ Ціни і відгуки на сайті.{% endblock %}" />

        <!-- Android Chrome -->
        <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('build/favicon/android-chrome-192x192.png') }}">
        <link rel="icon" type="image/png" sizes="512x512" href="{{ asset('build/favicon/android-chrome-512x512.png') }}">

        <!-- Apple Touch Icon -->
        <link rel="apple-touch-icon" href="{{ asset('build/favicon/apple-touch-icon.png') }}">

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('build/favicon/favicon.ico') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('build/favicon/favicon-16x16.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('build/favicon/favicon-32x32.png') }}">

        <!-- Site Manifest -->
        <link rel="manifest" href="{{ asset('build/favicon/site.webmanifest') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('landing/style') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('landing/script') }}
        {% endblock %}
    </head>
    <body>
    {% if app.environment == 'prod' %}
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NBSTHWM" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
    {% endif %}
    {% block body %}{% endblock %}
    </body>
</html>
